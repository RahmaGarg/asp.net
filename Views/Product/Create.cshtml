@model Atelier_2.Models.Product

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Désignation"></label>
        <input asp-for="Désignation" class="form-control" />
        <span asp-validation-for="Désignation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prix"></label>
        <input asp-for="Prix" class="form-control" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Catégorie"></label>
        @Html.DropDownListFor(model => model.Catégorie,
                 new SelectList(new[] {
        "Plomberie",
        "Chauffage",
        "Sanitaires",
        "Chauffage Central"
        }),
                 "Sélectionnez une catégorie",
                 new { @class = "form-control" })
        <span asp-validation-for="Catégorie" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>

@model Atelier_2.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this product?</h4>
    <dl class="row">
        <dt class="col-sm-2">Désignation:</dt>
        <dd class="col-sm-10">@Model.Désignation</dd>
        <dt class="col-sm-2">Prix:</dt>
        <dd class="col-sm-10">@Model.Prix</dd>
        <dt class="col-sm-2">Catégorie:</dt>
        <dd class="col-sm-10">@Model.Catégorie</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


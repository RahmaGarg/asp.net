@model IEnumerable<Atelier_2.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Désignation)</th>
            <th>@Html.DisplayNameFor(model => model.First().Prix)</th>
            <th>@Html.DisplayNameFor(model => model.First().Catégorie)</th>
            <th>@Html.DisplayNameFor(model => model.First().GarantieDuréeEnMois)</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Désignation</td>
                <td>@product.Prix</td>
                <td>@product.Catégorie</td>
                <td>@product.GarantieDuréeEnMois</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New Product</a>

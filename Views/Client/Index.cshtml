@model IEnumerable<Atelier_2.Models.Client>

@{
    ViewData["Title"] = "Clients List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.ClientFirstName</td>
                <td>@client.ClientLastName</td>
                <td>
                    <a href="@Url.Action("Details", new { id = client.ClientId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", new { id = client.ClientId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = client.ClientId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Create New Client</a>

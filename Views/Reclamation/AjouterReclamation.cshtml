@model Atelier_2.ViewModels.ReclamationViewModel

@{
    ViewData["Title"] = "Ajouter une Réclamation";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="ProductId">Produit</label>
        <select asp-for="ProductId" asp-items="ViewBag.Produits" class="form-control" required></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description de la réclamation</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DateAchat">Date d'achat</label>
        <input asp-for="DateAchat" class="form-control" type="date" required />
        <span asp-validation-for="DateAchat" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Soumettre</button>
</form>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

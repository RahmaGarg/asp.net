@model Atelier_2.Models.Reclamation

@{
    ViewData["Title"] = "Traiter la Réclamation";
}

<h2>Traiter la Réclamation</h2>

<h4>Réclamation pour le produit: @Model.Product.Désignation</h4>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Date de réclamation:</strong> @Model.DateReclamation.ToString("dd MMM yyyy")</p>
<p><strong>État actuel:</strong> @Model.Etat</p>


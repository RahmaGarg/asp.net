<div class="container">
    <div class="row">
        @if (User.IsInRole("Admin"))
        {
            <!-- Section pour l'administrateur -->
            <div class="row">
                <!-- Card pour ajouter un rôle -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/22.png" class="card-img-top" alt="Ajouter un Rôle">
                        <div class="card-body text-center">
                            <h5 class="card-title">Ajouter Un Rôle</h5>
                            <p class="card-text">Créez un nouveau rôle.</p>
                            <a href="@Url.Action("CreateRole", "Admin")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>

                <!-- Card pour la gestion des rôles -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/1.png" class="card-img-top" alt="Gestion des Rôles">
                        <div class="card-body text-center">
                            <h5 class="card-title">Gestion des Rôles</h5>
                            <p class="card-text">Gérer les rôles.</p>
                            <a href="@Url.Action("ListRoles", "Admin")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>

                <!-- Card pour la gestion des produits -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/6.png" class="card-img-top" alt="Produits">
                        <div class="card-body text-center">
                            <h5 class="card-title">Gestion des Produits</h5>
                            <p class="card-text">Ajoutez et gérez vos produits.</p>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <!-- Card pour les réclamations -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/5.png" class="card-img-top" alt="Réclamations">
                        <div class="card-body text-center">
                            <h5 class="card-title">Réclamations</h5>
                            <p class="card-text">Consultez et gérez vos réclamations.</p>
                            <a href="@Url.Action("All", "Reclamation")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>

                <!-- Card pour la gestion des pièces -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/3.png" class="card-img-top" alt="Gestion des Pièces">
                        <div class="card-body text-center">
                            <h5 class="card-title">Gestion des Pièces</h5>
                            <p class="card-text">Gérez les pièces de rechange.</p>
                            <a href="@Url.Action("Index", "Piece")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>

                <!-- Card pour les interventions -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/images/4.png" class="card-img-top" alt="Interventions">
                        <div class="card-body text-center">
                            <h5 class="card-title">Interventions</h5>
                            <p class="card-text">Planifiez et gérez les interventions techniques.</p>
                            <a href="@Url.Action("ManageInterventions", "Intervention")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Section pour les utilisateurs -->
            <div class="row">
                <!-- Card pour ajouter une réclamation -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/5.png" class="card-img-top" alt="Ajouter Réclamation">
                        <div class="card-body text-center">
                            <h5 class="card-title">Ajouter Réclamation</h5>
                            <p class="card-text">Soumettez une nouvelle réclamation.</p>
                            <a href="@Url.Action("AjouterReclamation", "Reclamation")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>

                <!-- Card pour mes réclamations -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/12.png" class="card-img-top" alt="Mes Réclamations">
                        <div class="card-body text-center">
                            <h5 class="card-title">Mes Réclamations</h5>
                            <p class="card-text">Consultez vos réclamations.</p>
                            <a href="@Url.Action("MesReclamations", "Reclamation")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nouvelle ligne pour deux autres cartes -->
            <div class="row">
                <!-- Card pour consulter le profil -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/profil.png" class="card-img-top" alt="Consulter Profil">
                        <div class="card-body text-center">
                            <h5 class="card-title">Mon Profil</h5>
                            <p class="card-text">Consultez vos informations de profil.</p>
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>

                <!-- Card "À propos de nous" -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/about.png" class="card-img-top" alt="À propos de nous">
                        <div class="card-body text-center">
                            <h5 class="card-title">À propos de nous</h5>
                            <p class="card-text">Découvrez l'équipe et l'histoire de notre entreprise.</p>
                            <a href="@Url.Action("About", "Home")" class="btn btn-primary">Accéder</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

<!-- CSS -->
<style>
    .card-img-top {
        width: 50%; /* Ajustement de la largeur */
        height: auto; /* Conserve le ratio d'aspect */
        margin: 10px auto; /* Centre l'image */
    }

    .card-body {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .btn {
        margin-top: auto;
    }
</style>

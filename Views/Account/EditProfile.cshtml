@model Atelier_2.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "Modifier Profil";
}

<h1>Modifier Profil</h1>
<hr />
<div class="form-container">
    <form method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Adresse"></label>
            <input asp-for="Adresse" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NumeroTelephone"></label>
            <input asp-for="NumeroTelephone" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
</div>

<!-- Custom Styles -->
<style>
    /* Form container style */
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        border-radius: 12px;
        padding: 20px;
        background-color: #f9f9f9; /* Light background color */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    /* Input Fields */
    .form-control {
        font-size: 16px;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 10px rgba(79, 115, 223, 0.3);
        }

    /* Button Styles */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #375aab;
            border-color: #375aab;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6368;
            border-color: #5a6368;
        }

    /* Header Title */
    h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Add some margin to the buttons */
    .btn {
        margin-top: 15px;
    }
</style>

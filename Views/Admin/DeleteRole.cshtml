@model string

@{
    ViewBag.Title = "Delete Role";
}

<h1>Are you sure you want to delete this role?</h1>

<form asp-action="DeleteRole" method="post">
    <input type="hidden" name="id" value="@Model" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("ListRoles", "Admin")" class="btn btn-secondary">Cancel</a>
</form>

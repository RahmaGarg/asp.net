    /* General Body and Font Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f7f7;
    }

    /* Card Header */
    .card-header {
        font-weight: bold;
        font-size: 14px;
        border-radius: 12px 12px 0 0;
        background-color: #f8f9fa;
    }

    /* Card Body */
    .card-body {
        padding: 20px;
    }

    /* Card Footer */

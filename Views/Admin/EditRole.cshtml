@model Atelier_2.ViewModels.EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<!-- Page Header -->
<div class="text-center mb-5">
    <h1 class="display-4 font-weight-bold text-dark">Edit Role</h1>
</div>

<!-- Edit Role Form -->
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- Buttons -->
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Update</button>
            <a asp-action="ListRoles" class="btn btn-secondary btn-lg rounded-pill shadow-sm ml-3">Cancel</a>
        </div>
    </div>
</form>

<!-- Users in this Role Section -->
<div class="card shadow-sm border-light rounded-lg mt-5">
    <div class="card-header bg-light text-dark">
        <h3>Users in this role</h3>
    </div>

    <div class="card-body">
        @if (Model.Users.Any())
        {
            @foreach (var user in Model.Users)
            {
                <h5 class="card-title text-muted">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title text-muted">None at the moment</h5>
        }
    </div>

    <div class="card-footer text-center">
        <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary btn-lg rounded-pill shadow-sm">
            Add or Remove Users from this Role
        </a>
    </div>
</div>


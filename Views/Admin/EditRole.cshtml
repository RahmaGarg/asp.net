    .form-control {
        font-size: 16px;
        padding: 15px;
        border-radius: 25px;
        border: 1px solid #ddd;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .form-control:focus {
        border-color: #4e73df;
        box-shadow: 0 0 10px rgba(79, 115, 223, 0.3);
    }

    /* Button Styling */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #375aab;
        border-color: #375aab;
    }

    .btn-secondary {

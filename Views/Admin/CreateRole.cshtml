@model Atelier_2.ViewModels.CreateRoleViewModel
@{
    ViewBag.Title = "Create New Role";
}

<!-- Title Section -->
<div class="text-center mb-5">
    <h1 class="display-4 font-weight-bold text-primary">Create New Role</h1>
</div>

<!-- Form -->
<form asp-action="CreateRole" method="post" class="mx-auto" style="max-width: 600px;">
    <!-- Validation Summary -->
    <div asp-validation-summary="All" class="text-danger mb-4"></div>

    <!-- Role Name Field -->
    <div class="form-group">
        <label asp-for="RoleName" class="font-weight-bold text-secondary">Role Name</label>
        <input asp-for="RoleName" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Enter role name" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block rounded-pill shadow-sm py-2">
            Create Role
        </button>
    </div>
</form>

<!-- Optional: Custom Styles -->
<style>
    /* General Body and Font Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fc;
    }

    /* Form Container */
    form {
        background-color: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    /* Form Title */
    .display-4 {
        font-size: 2.5rem;
        color: #4e73df;
    }

    /* Form Fields */
    .form-control {
        font-size: 16px;
        padding: 15px;
        border-radius: 25px;
        border: 1px solid #ddd;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 10px rgba(79, 115, 223, 0.3);
        }

    /* Button Styling */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #375aab;
            border-color: #375aab;
        }

    /* Button Shadow */
    .btn-lg {
        padding: 12px 24px;
    }

    /* Error Message */
    .text-danger {
        font-size: 14px;
        font-weight: 600;
    }
</style>

@model Atelier_2.Models.Intervention

@{
    ViewData["Title"] = "Supprimer l'Intervention";
}

<h1>Supprimer l'Intervention</h1>

<p>Êtes-vous sûr de vouloir supprimer cette intervention ?</p>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Date de l'Intervention</th>
        <td>@Model.DateIntervention.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Technicien</th>
        <td>@Model.Technicien?.UserName ?? "Non attribué"</td>
    </tr>
    <tr>
        <th>Coût Total</th>
        <td>@Model.CoutTotal.ToString("C")</td>
    </tr>
</table>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="ManageInterventions" class="btn btn-secondary">Annuler</a>
</form>

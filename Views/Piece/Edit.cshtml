@model Atelier_2.ViewModels.EditPieceViewModel

@{
    ViewData["Title"] = "Edit Piece";
}

<!-- Page Title -->
<div class="text-center mb-5">
    <h1 class="display-4 font-weight-bold text-dark">@ViewData["Title"]</h1>
</div>

<!-- Form Section -->
<form asp-action="Edit" method="post" class="form-container p-4 shadow-sm rounded-lg bg-white">
    <!-- Nom Field -->
    <div class="form-group">
        <label asp-for="Nom" class="control-label font-weight-semibold"></label>
        <input asp-for="Nom" class="form-control form-control-lg" placeholder="Enter piece name" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <!-- Prix Field -->
    <div class="form-group">
        <label asp-for="Prix" class="control-label font-weight-semibold"></label>
        <input asp-for="Prix" class="form-control form-control-lg" placeholder="Enter piece price" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <!-- Save Button -->
    <button type="submit" class="btn btn-primary btn-lg w-100 mt-3 shadow-sm">Save Changes</button>
</form>

<!-- Cancel Button -->
<div class="text-center mt-4">
    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg rounded-pill">Cancel</a>
</div>

<!-- Custom Styles -->
<style>
    /* Form container style */
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        border-radius: 12px;
    }

    /* Input Fields */
    .form-control {
        font-size: 16px;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 10px rgba(79, 115, 223, 0.3);
        }

    /* Button Styles */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #375aab;
            border-color: #375aab;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6368;
            border-color: #5a6368;
        }

    /* Header Title */
    h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Add some margin to the buttons */
    .btn {
        margin-top: 15px;
    }
</style>

@model Atelier_2.Models.Piece

@{
    ViewData["Title"] = "Delete Piece";
}

<!-- Page Header -->
<h1>@ViewData["Title"]</h1>

<!-- Alert for Confirmation -->
<div class="alert alert-danger">
    <h4>Are you sure you want to delete this piece?</h4>

    <!-- Description List for Piece Details -->
    <dl class="row">
        <dt class="col-sm-2">Nom Pièce:</dt>
        <dd class="col-sm-10">@Model.Nom</dd> <!-- Adjusted the column size -->

        <dt class="col-sm-2">Prix:</dt>
        <dd class="col-sm-10">@Model.Prix</dd> <!-- Adjusted the column size -->
    </dl>
</div>

<!-- Delete Confirmation Form -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
